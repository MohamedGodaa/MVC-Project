@model EmployeeViewModel
@inject IUnitOfWork _unitOfWork
@{
    //ViewBag.Departments = _departmentRepository.GetAll();
    var depatments = new SelectList(_unitOfWork.DepartmentRepository.GetAll(), nameof(Department.Id), nameof(Department.Name));
}
<div class="form-group">
    <label class="col-form-label" asp-for="Name"></label>

    <input type="text" asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Age"></label>
    <input type="text" asp-for="Age" class="form-control" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Address"></label>
    <input type="text" asp-for="Address" class="form-control" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Salary"></label>
    <input type="text" asp-for="Salary" class="form-control" />
</div>
<div class="form-check">
    <input type="checkbox" asp-for="IsActive" class="form-check-input" />
    <label class="form-check-label" asp-for="IsActive"></label>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Email"></label>
    <input type="text" asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="PhoneNumber"></label>
    <input type="text" asp-for="PhoneNumber" class="form-control" />
    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="HireDate"></label>
    <input asp-for="HireDate" class="form-control" />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Department"></label>
    <select class="form-control" asp-items="@depatments" asp-for="DepartmentId">
        <option value="@null">--Select Department</option>
    </select>
</div>
<div class="form-group border-0">
    <labal class="col-form-label" asp-for="Image">
        Image
    </labal>
    <input class="form-control" asp-for="Image" />
</div>
